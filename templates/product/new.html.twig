
{% extends 'admin.html.twig' %}
{% block title %}New Product{% endblock %}

{% block body %}
<style>
            .reset-styles {
            all: unset; /* Remove all inherited styles */
            display: inline-block; /* Ensure it behaves like an inline-block element */
            width: 100%; /* Full width of the container */
            padding: 10px; /* Add some padding */
            border: 2px solid #ccc; /* Light grey border */
            background-color: #fff; /* White background */
            font-size: 16px; /* Increase font size */
            box-sizing: border-box; /* Ensure padding and border are included in the element's total width and height */
            outline: none; /* Remove outline */
            border-radius: 5px; /* Rounded corners */
            transition: border-color 0.3s, box-shadow 0.3s; /* Smooth transitions */
        }

        .reset-styles:focus {
            border-color: #38b2ac; /* Focus border color */
            box-shadow: 0 0 8px rgba(102, 175, 233, 0.6); /* Add a shadow on focus */
            background-color: #f0f8ff; /* Change background color on focus */
        }

    </style>

